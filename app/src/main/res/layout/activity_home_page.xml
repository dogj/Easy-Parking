<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiangxin.packing.HomePage">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start packing"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/addtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="extension"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/hint1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="My packing statues:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="132dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/place_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Packing place"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/hint1"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="place"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/hint1"
        app:layout_constraintLeft_toRightOf="@+id/place_hint"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/start_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/place_hint"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/place_hint"
        app:layout_constraintLeft_toRightOf="@+id/start_hint"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/end_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/start_hint"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/start_hint"
        app:layout_constraintLeft_toRightOf="@+id/end_hint"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/balance_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Balance:"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/end_hint"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/current_balance_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/end_hint"
        app:layout_constraintLeft_toRightOf="@+id/balance_hint"
        android:layout_marginLeft="8dp" />


    <Button
        android:id="@+id/my_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/addtime"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>
